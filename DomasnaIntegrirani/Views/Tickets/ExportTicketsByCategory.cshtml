@model ECinemaTicket.Domain.CategoryViewModel
@{
    ViewData["Title"] = "Export Tickets By Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="m-4">Choose Category</h1>
    @Html.ValidationSummary()
    <form asp-action="ExportTicketsByCategory" asp-controller="Tickets" method="post">

        <div class="registerdiv">
            <div class="form-group col-sm-12">
                <label asp-for="@Model.Category" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Category, new { placeholder = "Category Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Category)
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-12 btn-submit">
                    <button type="submit" class="btn btn-success ml-3">Submit</button>
                    <button asp-action="Index" asp-controller="Tickets" type="submit" class="btn btn-outline-info ml-3">Back To Tickets</button>
                </div>
            </div>
        </div>
    </form>
</div>


<style>
    .validation-summary-errors li {
        color: red;
        text-transform: uppercase;
    }

    .field-validation-error {
        color: darkred;
        text-transform: capitalize;
        font-weight: 500;
    }
</style>
