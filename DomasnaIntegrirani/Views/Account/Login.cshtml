
@model ECinemaTicket.Domain.Identity.UserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h1 class="m-3">Login</h1>
    @Html.ValidationSummary()
    <form asp-action="Login" asp-controller="Account" method="post">

        <div class="logindiv">

            <div class="form-group col-sm-12">
              
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group col-sm-12">
               
                <div class="col-lg-9">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12 btn-submit">
                    <button type="submit" class="btn btn-success ml-3">Login</button>
                    <a class="btn btn-outline-info ml-3" asp-action="Register" asp-controller="Account">Don't have an account? Click to Register</a>
                </div>
            </div>
        </div>
    </form>
</div>


<style>
    .validation-summary-errors li{
        color: red;
        text-transform: uppercase;
    }

    .field-validation-error {
        color: darkred;
        text-transform: capitalize;
        font-weight: 500;
    }
</style>