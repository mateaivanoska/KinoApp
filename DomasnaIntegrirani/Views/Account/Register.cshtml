
@model ECinemaTicket.Domain.Identity.UserRegistrationDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1 class="m-3">Register</h1>
    @Html.ValidationSummary()
    <form asp-action="Register" asp-controller="Account" method="post">

        <div class="registerdiv">
            <div class="form-group col-sm-12">
               
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
            </div>

            <div class="form-group col-sm-12">
                
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
            </div>


            <div class="form-group col-sm-12">
                
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>


            <div class="form-group col-sm-12">
            
                <div class="col-lg-9">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group col-sm-12">
            
                <div class="col-lg-9">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12 btn-submit">
                    <button type="submit" class="btn btn-success ml-3">Sign Up</button>
                    <a class="btn btn-outline-info ml-3" asp-action="Login" asp-controller="Account">Already have an account? Click to Log-In</a>
                </div>
            </div>
        </div>
    </form>
</div>


<style>
    .validation-summary-errors li {
        color: red;
        text-transform: uppercase;
    }

    .field-validation-error{
        color: darkred;
        text-transform: capitalize;
        font-weight: 500;
    }
</style>